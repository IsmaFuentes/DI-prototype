<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Edit"
             x:Class="Prototype.pages.DetailEditPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Image Source="https://www.unfe.org/wp-content/uploads/2019/04/SM-placeholder-1024x512.png" Aspect="AspectFill" />
            <Entry x:Name="title" Placeholder="title"/>
            <Entry x:Name="subtitle" Placeholder="subtitle"/>
            <DatePicker x:Name="timestamp"/>
            <ScrollView Margin="10">
                <Editor x:Name="detailContent" ></Editor>
            </ScrollView>
            <FlexLayout VerticalOptions="Center" JustifyContent="Center">
                <Button x:Name="Save" Text="Save" Clicked="onSave"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>